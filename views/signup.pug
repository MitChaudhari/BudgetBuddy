doctype html
html
  head
    title Signup
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
  body
    .container
      h1.text-center Signup
      if errors
        .alert.alert-danger
          each error in errors
            div= error.msg
      form(method='POST', action='/signup', class='needs-validation', novalidate)
        .form-group
          label(for='firstName') First Name
          input(type='text', name='firstName', required='required', placeholder='First Name', class='form-control')
          div.invalid-feedback Please enter your first name.
        .form-group
          label(for='lastName') Last Name
          input(type='text', name='lastName', required='required', placeholder='Last Name', class='form-control')
          div.invalid-feedback Please enter your last name.
        .form-group
          label(for='emailAddress') Email Address
          input(type='email', name='emailAddress', required='required', placeholder='Email Address', class='form-control')
          div.invalid-feedback Please enter a valid email address.
        .form-group
          label(for='username') Username
          input(type='text', name='username', required='required', placeholder='Username', class='form-control')
          div.invalid-feedback Please enter a username.
        .form-group
          label(for='password') Password
          input(type='password', name='password', required='required', placeholder='Password', class='form-control')
          div.invalid-feedback Password must be at least 6 characters long.
        button(type='submit', class='btn btn-primary btn-block') Signup
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
    script.
      (function() {
        'use strict';
        window.addEventListener('load', function() {
          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          var forms = document.getElementsByClassName('needs-validation');
          // Loop over them and prevent submission
          var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
              if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
              }
              form.classList.add('was-validated');
            }, false);
          });
        }, false);
      })();
