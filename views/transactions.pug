doctype html
html
  head
    title Expense Tracker
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')

  body
    .container.mt-5
      h1.text-center Expense Tracker
      a(href="/transactions/add", class="btn btn-success mb-3") Add Expense

      // Filter form
      form(method='GET', action='/transactions')
        .form-row
          .form-group.col-md-4
            label(for='category') Category
            select(name='category', class='form-control')
              option(value='') Select category
              option(value='groceries') Groceries
          .form-group.col-md-4
            label(for='date') Date
            input(type='date', name='date', class='form-control')
          .form-group.col-md-4
            label(for='amount') Amount
            input(type='number', name='amount', class='form-control')
        button(type='submit', class='btn btn-primary') Filter

      // Transaction table
      table.table.table-striped
        thead
          tr
            th Date
            th Category
            th Amount
            th Actions
        tbody
          each transaction in transactions
            tr
              td= transaction.date.toLocaleDateString()
              td= transaction.category
              td= transaction.amount
              td
                button.btn.btn-info.btn-sm View
                button.btn.btn-primary.btn-sm Edit
                button.btn.btn-danger.btn-sm Delete
