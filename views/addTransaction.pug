doctype html
html
    head
        title Add Transaction
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    body
        .container.mt-5
            h1.text-center Add Transaction

            form(method='POST', action='/transactions/add')
                .form-group
                    label(for='amount') Amount
                    input#amount.form-control(type='number', name='amount', required=true, placeholder='Enter amount')

                .form-group
                    label(for='category') Category
                    select#category.form-control(name='category', required=true)
                        option(value='') Select category
                        option(value='groceries') Groceries
                        // Add more categories as needed

                .form-group
                    label(for='date') Date
                    input#date.form-control(type='date', name='date', required=true)

                .form-group
                    label(for='description') Description
                    textarea#description.form-control(name='description', placeholder='Description')

                button.btn.btn-primary(type='submit') Save Transaction

            if errors
                .alert.alert-danger
                    each error in errors
                        div= error.msg

    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
