doctype html
html
  head
    title Add Transaction
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Roboto&display=swap", rel="stylesheet")
    style.
      body {
        background: linear-gradient(to right, #0f2027, #203a43, #2c5364); /* Dark blue gradient */
        color: white; 
        height: 100vh; 
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0; /* Reset default margin */
      }
      .card-custom {
        background: linear-gradient(to right, #6a11cb, #2575fc); /* Purple to blue gradient */
        border: none;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 2rem;
        border-radius: 15px;
        max-width: 500px;
        margin: auto;
      }
      .roboto-regular {
        font-family: 'Roboto', sans-serif; 
      }
      .btn-custom-primary {
        background-color: #007bff; /* Bootstrap primary color */
        color: white;
        width: 48%; /* Half width - adjust for spacing */
        margin-right: 4%; /* Space between buttons */
      }
      .btn-custom-secondary {
        background-color: #6c757d; /* Bootstrap secondary color */
        color: white;
        width: 48%; /* Half width */
      }

  body
    .container
      .row
        .col-md-12
          .card-custom
            h1.text-center.mb-4 Add Transaction

            form(method='POST', action='/transactions/add', class='roboto-regular')
              .form-group
                label(for='amount') Amount
                input#amount.form-control(type='number', name='amount', required=true, step='0.01', placeholder='Enter amount')

              .form-group
                label(for='category') Category
                select#category.form-control(name='category', required=true)
                  option(value='') Select category
                  option(value='groceries') Groceries
                  option(value='utilities') Utilities
                  option(value='entertainment') Entertainment
                  option(value='dining_out') Dining Out
                  option(value='transportation') Transportation
                  option(value='health_care') Health Care
                  option(value='education') Education
                  option(value='personal_care') Personal Care
                  option(value='savings') Savings
                  option(value='miscellaneous') Miscellaneous

              .form-group
                label(for='date') Date
                input#date.form-control(type='date', name='date', required=true)

              .form-group
                label(for='description') Description
                textarea#description.form-control(name='description', placeholder='Description')

              .d-flex.justify-content-between
                button.btn.btn-custom-primary(type='submit') Save Transaction
                a.btn.btn-custom-secondary(href='/transactions') Back

            if errors
              .alert.alert-danger
                each error in errors
                  div= error.msg

    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
